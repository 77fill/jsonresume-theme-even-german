{{#if resume.education.length}}
  <section id="education">
    <h3>Education</h3>
    <div class="stack">
      {{#each resume.education}}
        <article>
          <header>
            <div class="spaced-list">
              <h4>{{> link name=institution}}</h4>
              <span>
                <time datetime="{{startDate}}">{{formatDate startDate}}</time> â€“
                {{#if endDate}}<time datetime="{{endDate}}">{{formatDate endDate}}</time>{{else}}Present{{/if}}
              </span>
            </div>
            {{#area}}
              <strong>{{.}}</strong>
            {{/area}}
          </header>
          {{#studyType}}
            {{{markdown .}}}
          {{/studyType}}
          {{#if courses.length}}
            <h5>Courses</h5>
            <ul>
              {{#courses}}
                <li>{{.}}</li>
              {{/courses}}
            </ul>
          {{/if}}
        </article>
      {{/each}}
    </div>
  </section>
{{/if}}
