{{#if resume.awards.length}}
  <section id="awards">
    <h3>Awards</h3>
    <div class="stack">
      {{#each resume.awards}}
        <article>
          <header>
            <h4>{{title}}</h4>
            {{#awarder}}
              <div>
                Awarded by <strong>{{.}}</strong>
              </div>
            {{/awarder}}
            {{#date}}
              <time datetime="{{.}}">{{formatDate .}}</time>
            {{/date}}
          </header>
          {{#summary}}
            {{{markdown .}}}
          {{/summary}}
        </article>
      {{/each}}
    </div>
  </section>
{{/if}}
